@page
@{
}
<head>
    <script src="~/js/site.js"></script>
    <script src="~/js/JQuery.js"></script>
    <script src="~/js/Knockout.js"></script>
</head>

<div>
    <div class="container">
        <form  id="addForm">
            <h2>Add new Anime</h2>

            
          <div class="mb-3">
            <label for="heading">Heading</label>
            <input type="text" class="form-control" id="Heading" data-bind="value:Heading">
          </div>
          <div class="mb-3">
            <label for="title">Page title</label>
            <input type="text" class="form-control" id="PageTitle" data-bind="value:PageTitle">
          </div>
          
          <div class="mb-3">
            <label for="desc">Short Description</label>
            <textarea class="form-control" id="ShortDescription" data-bind="value:ShortDescription" ></textarea>
          </div>
          <div class="mb-3">
            <label for="imgurl">ImageUrl</label>
            <input type="text" class="form-control" id="ImageUrl" data-bind="value:ImageUrl" >
          </div>
          <div class="mb-3">
            <label for="urlhandle" class="form-label">Url Handler</label>
            <input type="text" class="form-control" id="UrlHandle" data-bind="value:UrlHandle">
          </div>
          <div class="mb-3">
            <label for="releasedate">Released Date</label>
            <input type="date" class="form-control" id="ReleaseDate" data-bind="value:ReleaseDate">
          </div>
          <div class="mb-3">
            <input class="form-check-input" type="checkbox"  id="Visible" data-bind="value:Visible" >
            <label class="form-check-label" for="visible">Is Visible</label>
          </div>
          <div class="mb-3">
            <button class="btn btn-primary" type="submit">Submit</button>
          </div>
                    <a class="navbar-brand text-danger" asp-area="" asp-page="/Admin/Animes/List">Return</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </form>
    </div>
</div>
