@page 
@model kiyotaka.Web.Pages.Admin.Animes.EditModel
@{
    var message = ViewData["Message"]?.ToString();
}

<h2 class="mb-3">Edit</h2>
<form method="post">
    @if (!string.IsNullOrWhiteSpace(message))
    {
            <div class="alert alert-success" role="alert">
            @message
            </div>
    }


</form>
<div>
    <div class="container">
        <form method="post">
            <h2>Add new Player</h2>

            @if (!string.IsNullOrWhiteSpace(message))
            {
                <div class="alert alert-success" role="alert">
                    @message
                </div>
            }
        <div class="col-md-6 mb-3">
            <label for="id">Id</label>
            <input type="text" class="form-control" id="id" asp-for="EditAnimesRequest.Id" readonly>
            <div class="invalid-feedback">
                Valid name is required.
            </div>
        </div>
          <div class="mb-3">
            <label for="heading">Heading</label>
            <input type="text" class="form-control" id="heading" asp-for="EditAnimesRequest.Heading">
          </div>
          <div class="mb-3">
            <label for="title">Page title</label>
            <input type="text" class="form-control" id="title" asp-for="EditAnimesRequest.PageTitle">
          </div>

          <div class="mb-3">
            <label for="desc">Short Description</label>
            <textarea class="form-control" id="desc" asp-for="EditAnimesRequest.ShortDescription" ></textarea>
          </div>
          <div class="mb-3">
            <label for="imgurl">ImageUrl</label>
            <input type="text" class="form-control" id="imgurl" asp-for="EditAnimesRequest.ImageUrl" >
          </div>
          <div class="mb-3">
            <label for="urlhandle" class="form-label">Url Handler</label>
            <input type="text" class="form-control" id="urlhandle" asp-for="EditAnimesRequest.UrlHandle">
          </div>
          <div class="mb-3">
            <label for="releasedate">Released Date</label>
            <input type="date" class="form-control" id="releasedate" asp-for="EditAnimesRequest.ReleaseDate">
          </div>
          <div class="mb-3">
            <input class="form-check-input" type="checkbox"  id="isvisible" asp-for="EditAnimesRequest.Visible" >
            <label class="form-check-label" for="visible">Is Visible</label>
          </div>
          <div class="mb-3">
            <button class="btn btn-primary" type="submit">Edit</button>
          </div>
          <a class="navbar-brand text-danger" asp-area="" asp-page="/Admin/Animes/List">Return</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
        </form>
    </div>
</div>
